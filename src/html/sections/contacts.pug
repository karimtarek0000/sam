include ../components/svg
include ../components/section-contact

//- 
footer.contacts#contacts

    .row.no-gutters.container.align-items-start.justify-content-between.h-100.py-2.py-lg-5.border-bottom.border-gray

        .col-md-12.col-lg-3.text-gray.contacts__section-1
            //- 
            include ../components/logo
            p(class="p-mid weight-normal mt-3 mt-lg-3 par" key="footer" data-lang="par-1")

            div.contacts__section-1__icons.d-flex
                a(class="d-flex align-items-center justify-content-center rounded-circle" href="https://goo.gl/maps/nT1n49ujDKzzEGZN8" target="_blank")
                    +getSvgIcon('map', 'resize-svg-contact')
                a(class="d-flex align-items-center justify-content-center rounded-circle" href="tel:+201101757591" target="_blank")
                    +getSvgIcon('telephone', 'resize-svg-contact')
                a(class="d-flex align-items-center justify-content-center rounded-circle" href="https://www.facebook.com/SamConstructionCo" target="_blank")
                    +getSvgIcon('facebook', 'resize-svg-contact')
                    
        .col-md-4.col-lg-3.contacts__section-2.mt-3.mt-lg-4
            -var one = [{title: "02 3835 0139", icon: "telephone"}, {title: "01101757591", icon: "mobile"}, {title: 'info@sam-construction.com', icon: 'mail'}]
            +sectionContact('contact us', one)(class="heading" key="footer" data-lang="head-1")

        .col-md-3.col-lg-2.contacts__section-3.mt-3.mt-lg-4
            h4(class="h-xsmall weight-bold text-primary text-capitalize mb-2 mb-lg-3 heading" key="footer" data-lang="head-2")
            -const itemsContacts = ['home', 'aboutus', 'projects', 'partners', 'contacts']
            ul(class="navbar-nav")
                each item in itemsContacts
                    li.nav-item
                        a(class='nav-link weight-normal cursor text-capitalize text-primary py-1 px-1 mx-1' class=item == title ? 'active' : '' data-section=item.replace(' ', '') key=item href=item == 'home'? '/' : item)

    .row.no-gutters.container.py-3
        .col.text-center.text-lg-right
            p.text-gray.text-uppercase.m-0 !{'<span class="par" key="footer" data-lang="copyright"></span>'} Â© !{'<span id="year"></span>'} !{'<a href="/">sam</a>'}